{
    "family": "orca-fargate",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "orca-exercise-app",
            "image": "orca:1.0",
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 5000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}