{
   "containerDefinitions": [
      {
         "secrets": [{
                "name": "DATABASE_URL",
                "valueFrom": "arn:aws:secretsmanager:eu-west-1.:022786159174:secret:DATABASE_URL"
            }],
         "essential": true,
         "image":  "022786159174.dkr.ecr.eu-west-1.amazonaws.com/orca:${{ github.sha }}",
         "name": "orca-exercise",
         "portMappings": [
            {
               "containerPort": 5000,
               "hostPort": 5000,
               "protocol": "tcp"
            }
         ]
      }
   ],
   "cpu": "256",
   "executionRoleArn": "arn:aws:iam::022786159174:role/ecs-task-execution",
   "family": "fargate-task-definition",
   "memory": "512",
   "networkMode": "awsvpc",
   "runtimePlatform": {
        "operatingSystemFamily": "LINUX"
    },
   "requiresCompatibilities": [
       "FARGATE"
    ]
}